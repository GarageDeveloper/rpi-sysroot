
<!-- ANT build.xml for JavaGraphics -->

<project name="JavaGraphics"
  default="jar"
  basedir=".">

  <!-- Settings specific to this app build -->

  <property name="app.name" value="JavaGraphics"/>
  <property name="version" value="1.0.0"/>
  
  <property name="base" value="." />
  <property name="src" value="${base}/Source" />
  <property name="build" location="${base}/build"/> 
  <property name="jar" value="${base}/${app.name}.jar" />

  <patternset id="resources.pattern" >
    <include name="*" />
    <exclude name="**/CVS/*" />
    <exclude name="*.tws" />
    <exclude name="*.project" />
    <exclude name="*.sss*" />
    <exclude name="**/.AppleDouble/*" />
  </patternset>

  <target name="init" description="create timestamp">
    <!-- Create the time stamp -->
    <tstamp/>
  </target>

  <target name="compile" depends="init" description="compile source files" >
    <!-- Create build dir -->
    <mkdir dir="${build}" /> 
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}" classpath="/math/JLink/V2_1_0/JLink/JLink.jar" />
  </target> 
  
  <target name="jar" depends="compile" description="create jar file" >
    <!-- Create JAR -->
    <jar jarfile="${jar}" basedir="${build}" />
  </target> 
  
  <target name="clean" description="clean up" >
    <!-- Delete the ${jar} file and ${build} dir -->
    <delete dir="${build}" />
    <delete file="${jar}" />
  </target> 

</project>
