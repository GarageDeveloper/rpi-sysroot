<!-- ANT build.xml for Convert.jar -->
<project name="Convert" default="jar" basedir=".">

<!-- Settings specific to this app build -->
  <property name="app.name" value="Convert"/>
  <property name="version"  value="1.0"/>

  <property name="base"   value="." />
  <property name="src"    value="${base}" />
  <property name="build"  value="${base}/build" /> 
  <property name="target" value="${base}/.." />
  <property name="jar"    value="${target}/${app.name}.jar" />
  <property name="jlink" value="../../../../JLink/" />

<!-- Create the time stamp -->
  <target name="init" description="create timestamp">
    <tstamp/>
  </target>
  
<!-- Create class file -->
  <target name="compile" depends="init" description="compile source files" >
    <mkdir dir="${build}" />
    <javac srcdir="${src}" destdir="${build}">
     <classpath>
       <pathelement location="${jlink}/JLink.jar"/>
       <fileset dir="${target}" />
     </classpath>
    </javac>
  </target> 
  
<!-- Create jar file -->  
  <target name="jar" depends="compile" description="create jar file" >
    <jar jarfile="${jar}" basedir="${build}" />
  </target> 
  
<!-- Delete all generated files and dirs -->
  <target name="clean" description="clean up" >
    <delete file="${jar}" />
    <delete dir="${build}" />
  </target> 

</project>