<?xml version="1.0"?>
<project name='Packages' basedir='.'>

	<property name='component' value='Packages' />

	<property environment='env' />
	<import file='${env.ANT-LIBRARY-2.0_HOME}/ant-lib.xml' />

	<target name='Component.Packages.execute' extensionOf='Component.execute'>

		<for param='theFolder'>
			<path>
				<dirset dir='${basedir}/..'>
					<include name='*' />
					<exclude name='Layout/' />
				</dirset>
			</path>
			<sequential>

				<local name='baseName'/>
				<basename file='@{theFolder}' property='baseName' />

				<copy todir='${files_directory}/${baseName}' includeEmptyDirs='false'>
					<fileset dir='@{theFolder}'>
						<exclude name='Documentation/' />
						<exclude name='**/*.nb' />
					</fileset>
				</copy>

			</sequential>
		</for>

	</target>

	<target name='Component.Packages.artifacts.custom' extensionOf='Component.artifacts.custom'>

		<tar destfile='${output_directory}/${component}_English.tar.gz' compression='gzip'>
			<tarfileset dir='${basedir}/..' filemode='644'>
				<include name='Notation/LocalPalettes/English/' />
			</tarfileset>
		</tar>

	</target>

</project>
